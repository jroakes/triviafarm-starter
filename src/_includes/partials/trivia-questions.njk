{% if questions %}

  {% for question in questions %}

  <div class="card w-full mb-6 rounded shadow-md">
    <div class="card-body p-3">
      <div class="collapse collapse-arrow rounded">
        <input id="faq-item-{{ loop.index }}" type="checkbox" />
        <label for="faq-item-{{ loop.index }}">{{question.query}}</label>
        <div class="collapse-title text-xl font-medium">
          {{question.query}}
        </div>
        <div class="collapse-content text-center bg-slate-100 rounded">
          <p class="text-xl font-extrabold text-center">{{question.answer}}</p>
          <blockquote class="text-left">...{{question.context | safe }}...</blockquote>
          <a href="{{question.url}}" rel="nofollow noopener" target="_blank" title="External Link: {{question.url}}">
            <button class="btn btn-xs btn-outline btn-secondary">Source <svg class="h-3 w-3 ml-1 text-secondary hover:text-white"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <path d="M11 7h-5a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-5" />  <line x1="10" y1="14" x2="20" y2="4" />  <polyline points="15 4 20 4 20 9" /></svg></button>
          </a>
        </div>
      </div>
    </div>
  </div>


  {% endfor %}


{% endif %}
